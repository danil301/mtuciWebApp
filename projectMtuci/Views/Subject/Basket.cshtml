@model List<projectMtuci.Domain.Entity.Subject>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Избранное</h1>

@if (Model.Count() != 0)
{
	foreach(var item in Model)
	{
    <div class="d-flex justify-content-between">
		<div>Предмет: @item.Name</div>
		<div>Курс: @item.Course</div>
		<div>Степень: @item.Degree</div>
		<a asp-action="DownloadSubject" asp-controller="Subject" asp-route-path="@item.PathToFile.Trim()">@item.PathToFile</a>
		<a asp-action="DeleteFromBasket" asp-controller="Subject" asp-route-id=@item.Id>Убрать из избранного</a>
	</div>

	}	
} 
@if(Model.Count() == 0)
{
	<div>Список пуст</div>
}

