@model List<projectMtuci.Domain.Entity.Subject>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


@if (Model.Count() != 0)
{
	<h1>Материалы по предмету @Model[0].Name</h1>
}
@foreach(var item in Model)
{
    <div class="d-flex justify-content-between">
		<div>Предмет: @item.Name</div>
		<div>Курс: @item.Course</div>
		<div>Степень: @item.Degree</div>
		<a asp-controller="Subject" asp-action="DownloadSubject" asp-route-path=@item.PathToFile.Trim()>@item.PathToFile</a>
		<a href="Subject/AddToBasket/@item.Id">Добавить в избранное</a>
	</div>
}